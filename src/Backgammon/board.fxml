<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane fx:id="paneId" id="pane" minHeight="650.0" minWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="Backgammon.Controller">

    <!-- Q1 -->
    <GridPane id="Q1" fx:id="Q1" prefHeight="325.0" prefWidth="400.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
      <GridPane.margin>
         <Insets left="20.0" />
      </GridPane.margin>
        <VBox onMouseClicked="#click" GridPane.columnIndex="0" />
        <VBox onMouseClicked="#click" GridPane.columnIndex="1" />
        <VBox alignment="TOP_CENTER" GridPane.columnIndex="2" onMouseClicked="#click" />
        <VBox alignment="TOP_CENTER" GridPane.columnIndex="3" onMouseClicked="#click" />
        <VBox alignment="TOP_CENTER" GridPane.columnIndex="4" onMouseClicked="#click" />
        <VBox alignment="TOP_CENTER" GridPane.columnIndex="5" onMouseClicked="#click" />
        <columnConstraints>
            <ColumnConstraints percentWidth="17" />
            <ColumnConstraints percentWidth="17" />
            <ColumnConstraints percentWidth="17" />
            <ColumnConstraints percentWidth="17" />
            <ColumnConstraints percentWidth="17" />
            <ColumnConstraints percentWidth="17" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints percentHeight="90" />
        </rowConstraints>
    </GridPane>

    <!-- Q2 -->
    <GridPane id="Q2" fx:id="Q2" prefHeight="325.0" prefWidth="400.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
        <VBox onMouseClicked="#click" GridPane.columnIndex="0" />
        <VBox onMouseClicked="#click" GridPane.columnIndex="1" />
        <VBox onMouseClicked="#click" GridPane.columnIndex="2" />
        <VBox onMouseClicked="#click" GridPane.columnIndex="3" />
        <VBox onMouseClicked="#click" GridPane.columnIndex="4" />
        <VBox onMouseClicked="#click" GridPane.columnIndex="5" />
        <columnConstraints>
            <ColumnConstraints percentWidth="17" />
            <ColumnConstraints percentWidth="17" />
            <ColumnConstraints percentWidth="17" />
            <ColumnConstraints percentWidth="17" />
            <ColumnConstraints percentWidth="17" />
            <ColumnConstraints percentWidth="17" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints percentHeight="90" />
        </rowConstraints>

    </GridPane>


    <!-- Q3 -->
    <GridPane id="Q3" fx:id="Q3" prefHeight="325.0" prefWidth="400.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <GridPane.margin>
         <Insets left="20.0" />
        </GridPane.margin>

        <VBox alignment="BOTTOM_CENTER" onMouseClicked="#click" GridPane.columnIndex="0" />
        <VBox alignment="BOTTOM_CENTER" onMouseClicked="#click" GridPane.columnIndex="1" />
        <VBox alignment="BOTTOM_CENTER" onMouseClicked="#click" GridPane.columnIndex="2" />
        <VBox alignment="BOTTOM_CENTER" onMouseClicked="#click" GridPane.columnIndex="3" />
        <VBox alignment="BOTTOM_CENTER" onMouseClicked="#click" GridPane.columnIndex="4" />
        <VBox alignment="BOTTOM_CENTER" onMouseClicked="#click" GridPane.columnIndex="5" />
        <columnConstraints>
            <ColumnConstraints percentWidth="17" />
            <ColumnConstraints percentWidth="17" />
            <ColumnConstraints percentWidth="17" />
            <ColumnConstraints percentWidth="17" />
            <ColumnConstraints percentWidth="17" />
            <ColumnConstraints percentWidth="17" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints percentHeight="100" />
        </rowConstraints>

    </GridPane>

    <!-- Q4 -->
    <GridPane id="Q4" fx:id="Q4" prefHeight="325.0" prefWidth="400.0"  GridPane.columnIndex="2" GridPane.rowIndex="2">
        <VBox alignment="BOTTOM_CENTER" onMouseClicked="#click" GridPane.columnIndex="0" />
        <VBox alignment="BOTTOM_CENTER" onMouseClicked="#click" GridPane.columnIndex="1" />
        <VBox alignment="BOTTOM_CENTER" onMouseClicked="#click" GridPane.columnIndex="2" />
        <VBox alignment="BOTTOM_CENTER" onMouseClicked="#click" GridPane.columnIndex="3" />
        <VBox alignment="BOTTOM_CENTER" onMouseClicked="#click" GridPane.columnIndex="4" />
        <VBox alignment="BOTTOM_CENTER" onMouseClicked="#click" GridPane.columnIndex="5" />
        <columnConstraints>
            <ColumnConstraints percentWidth="17" />
            <ColumnConstraints percentWidth="17" />
            <ColumnConstraints percentWidth="17" />
            <ColumnConstraints percentWidth="17" />
            <ColumnConstraints percentWidth="17" />
            <ColumnConstraints percentWidth="17" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints percentHeight="100" />
        </rowConstraints>
    </GridPane>

    <!-- Bar -->
    <GridPane id="Bar" prefWidth="60.0" onMouseClicked="#click" GridPane.columnIndex="1" GridPane.rowSpan="2" >
        <VBox fx:id="blackBarVBox" GridPane.rowIndex="1" alignment="BOTTOM_CENTER"/>
        <VBox fx:id="whiteBarVBox" GridPane.rowIndex="2" alignment="TOP_CENTER" />
        <columnConstraints>
            <ColumnConstraints percentWidth="100" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints percentHeight="50"/>
            <RowConstraints percentHeight="50"/>
        </rowConstraints>
    </GridPane>

    <!-- Bearoff -->
    <GridPane id="Bearoff" prefWidth="100.0" onMouseClicked="#click" GridPane.columnIndex="3" GridPane.rowSpan="2">
      <GridPane.margin>
         <Insets left="15.0" />
      </GridPane.margin>
        <VBox fx:id="whiteBearOffVBox" GridPane.rowIndex="1" alignment="TOP_CENTER"/>
        <VBox fx:id="blackBearOffVBox" GridPane.rowIndex="2" alignment="BOTTOM_CENTER" />
        <columnConstraints>
            <ColumnConstraints percentWidth="100" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints percentHeight="50"/>
            <RowConstraints percentHeight="50"/>
        </rowConstraints>
    </GridPane>

    <!-- User input text field -->
    <TextField id="pCommand" fx:id="pCommands" prefHeight="30" prefWidth="300" onAction="#onEnter" GridPane.columnIndex="0"
               GridPane.rowIndex="2" promptText="Input your commands here" />

    <TextArea  id="displayArea" fx:id="gameInfo" maxWidth="350" prefWidth="300"  minHeight="610" GridPane.columnSpan="2"
               GridPane.rowIndex="1" GridPane.columnIndex="2" GridPane.rowSpan="2"/>

    <!-- Button -->
    <Button id="infoBut" fx:id="infoButton" GridPane.columnIndex="3" GridPane.rowIndex="0" onAction="#infoB" text="i"/>


    <GridPane id="scoreInfo" mouseTransparent="true" GridPane.rowIndex="0" GridPane.rowSpan="1" GridPane.columnSpan="4">
        <HBox fx:id="playerOne" id="players" GridPane.columnIndex="0"/>
        <HBox fx:id="playerTwo" id="players" GridPane.columnIndex="2"/>
        <columnConstraints>
            <ColumnConstraints percentWidth="42"/>
            <ColumnConstraints percentWidth="6"/>
            <ColumnConstraints percentWidth="40.5"/>
            <ColumnConstraints percentWidth="11.5"/>
        </columnConstraints>
    </GridPane>

   <columnConstraints>
      <ColumnConstraints percentWidth="42"/>
      <ColumnConstraints percentWidth="6"/>
      <ColumnConstraints percentWidth="40.5"/>
      <ColumnConstraints percentWidth="11.5"/>
   </columnConstraints>
   <rowConstraints>
      <RowConstraints percentHeight="9.090"/>
      <RowConstraints percentHeight="45.45"/>
      <RowConstraints percentHeight="45.45"/>
   </rowConstraints>
</GridPane>